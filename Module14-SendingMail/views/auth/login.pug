extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
block content
    if errorMessage
        div.ui.error.message
            div.header There were some errors with your submission
            p #{errorMessage}
   
    h2.ui.header
        i.user.icon
        div.content #{pageTitle}
    div.ui.ui.divider

    div.container(style="width: 36rem; margin: 0 auto;") 
        form.ui.form(method="post" action="/login")
            div.field
                label Email
                input(type="text" name="email" placeholder="Please input your email")
            div.field
                label Password
                input(type="password" name="password" placeholder="Please input your password")
                input(type="hidden", name="_csrf" value=`${csrfToken}`) 
            button.ui.button.primary(type="submit") 
                span Login 

        div.ui.divider
            div(style="text-align: center; margin-top: 2rem;") 
                a(href="/reset") Reset Password
