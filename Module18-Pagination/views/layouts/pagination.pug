div.ui.basic.buttons(style="float: right; margin-top: 2rem;")
    if currentPage != 1
        a.ui.basic.button(href="?page=1") 1
    if hasPreviousPage && previousPage != 1
        a.ui.basic.button(href=`?page=${previousPage}`) #{previousPage}
    
    a.ui.basic.button.blue(href=`?page=${currentPage}`) #{currentPage}

    if hasNextPage 
        a.ui.basic.button(href=`?page=${nextPage}`) #{nextPage}
    if lastPage != currentPage && nextPage != lastPage  
        a.ui.basic.button(href=`?page=${lastPage}`) #{lastPage}